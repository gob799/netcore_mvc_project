
@* @model IEnumerable<DepositModel> *@
@{
    ViewData["Title"] = "Deposit Dashboard";
}
<h1>@ViewData["Title"]</h1>

@section scripts {

<script type="text/javascript">

    $(document).ready(function(){

       
          $('#deposit-tab a').on('click', function (e) {
            e.preventDefault()
            $(this).tab('show')
          })

          
          $('#dtData').DataTable({
            "pagingType": "simple" // "simple" option for 'Previous' and 'Next' buttons only
          });
          $('.dataTables_length').addClass('bs-select');

    });

</script>

}
    
<ul class="nav nav-pills mb-3" id="deposit-tab" role="tablist">
  <li class="nav-item">
    <a class="nav-link active" id="deposit-home-tab" data-toggle="tab" href="#deposit-home" role="tab" aria-controls="deposit-home" aria-selected="true">Dashboard</a>
  </li>
  <li class="nav-item">
    <a class="nav-link" id="deposit-transaction-tab" data-toggle="tab" href="#deposit-transaction" role="tab" aria-controls="deposit-transaction" aria-selected="false">Transaction ฝาก เติมเงิน</a>
  </li>
 
  <li class="nav-item">
    <a class="nav-link" id="deposit-report-tab" data-toggle="tab" href="#deposit-report" role="tab" aria-controls="deposit-report" aria-selected="false">รายงาน</a>
  </li>
</ul>
<div class="tab-content" id="deposit-tabContent">
  <div class="tab-pane fade show active" id="deposit-home" role="tabpanel" aria-labelledby="deposit-home-tab">
    .. Dashboard
     
  </div>
  <div class="tab-pane fade" id="deposit-transaction" role="tabpanel" aria-labelledby="deposit-transaction-tab">
  <div class="table-responsive">  
        @* <table id="dtData" cellspacing="0" width="100%" class="table table-bordered table-condensed table-striped table-hover sortable">   *@
          <table id="dtData" class="table table-striped table-bordered table-sm" cellspacing="0" width="100%">  
            @if (Model.Count() == 0)  
                {  
                <tr>  
                    <td colspan="10">No Record's found.</td>  
                </tr>  
            }  
            else  
            {  
                <thead>  
                    <tr class="danger">  
                        <th class="th-sm">เลขที่</th>  
                        <th class="th-sm">ลูกค้า</th>  
                        <th class="th-sm">ธนาคาร</th> 
                        <th class="th-sm" data-defaultsign="AZ">บัญชี</th> 
                        <th class="th-sm" data-defaultsign="AZ">ยอดเงิน</th> 
                        <th class="th-sm" data-defaultsign="AZ">สถานะ</th> 
                        <th class="th-sm" data-defaultsign="AZ">เวลา Wl</th> 
                        <th class="th-sm" data-defaultsign="AZ">เวลา บอทถอน</th>  
                        <th class="th-sm" data-defaultsign="AZ">Action</th>  
                        
                        
                    </tr>  
                </thead>  
                foreach (var item in Model)  
                {  
                    <tr>  
                        @* <td>@item.wtd_id</td>   *@
                        <td>@item.data1</td>  
                        <td>@item.data2</td> 
                        <td>@item.data3</td> 
                        <td>@item.data3</td> 
                        <td>@item.data3</td> 
                        <td>@item.data3</td> 
                        <td>@item.data3</td> 
                        <td>@item.data3</td> 
                        @* <td>@item.wtd_memberid</td>  *@
                        
                       

                        <td><button type='button' onclick='productDelete(this);' class='btn btn-default'>Delete</button></td>
                        
                    </tr>  
                }  
            }  
        </table>  
      </div> 

  </div>
  
  <div class="tab-pane fade" id="deposit-report" role="tabpanel" aria-labelledby="deposit-report-tab">...4</div>
</div>







